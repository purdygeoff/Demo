@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me to add 1</button>
<button class="btn btn-primary" @onclick="IncrementBy2">Add 2</button>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    private void IncrementBy2()
    {
        currentCount++;
        currentCount++;
    }
}
